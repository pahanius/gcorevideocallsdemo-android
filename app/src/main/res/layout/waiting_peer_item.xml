<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <import type="gcore.videocalls.demo.call.WaitingPeerDataBinding" />

        <variable
            name="PeerData"
            type="WaitingPeerDataBinding" />
        <!--        <import type="androidx.databinding.ObservableField" />-->

        <!--        <variable-->
        <!--            name="isMicEnabled"-->
        <!--            type="ObservableField&lt;Boolean&gt;" />-->

        <!--        <variable-->
        <!--            name="isCamEnabled"-->
        <!--            type="ObservableField&lt;Boolean&gt;" />-->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/peer_item_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/display_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/accept_peer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:text="Принять" />

        <Button
            android:id="@+id/reject_peer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:text="Отклонить" />

    </LinearLayout>
</layout>